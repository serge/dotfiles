set $mod Mod4
# applications shortcuts
set $PROGRAM_LAUNCHER          exec --no-startup-id rofi -show run 
set $BOOKMARKS_LAUNCHER        exec --no-startup-id ~/bin/bookmarks ~/.cache/bookmarks
set $LOCK_SCREEN               exec --no-startup-id ~/bin/lockscreen
set $DOUBLE_SCREEN             exec --no-startup-id ~/bin/doublescreen
set $TAKE_SCREENSHOT           exec --no-startup-id "imlib2_grab ~/.screenshots/screen`date +'_%Y_%m_%d_%H_%M_%S'`.png"

set $TOGGLE_VOLUME             exec --no-startup-id "amixer set 'Master' toggle"
set $VOLUME_DOWN               exec --no-startup-id "amixer set 'Master' -q 5%-"
set $VOLUME_UP                 exec --no-startup-id "amixer set 'Master' -q 5%+"

set $KILL_MPLAYER              exec --no-startup-id "pkill mplayer"

set $CHECK_EMAILS              exec --no-startup-id ~/bin/mailnotify.sh
set $SHOW_TIME_AROUND_THE_WORLD exec --no-startup-id ~/bin/melbourne.sh
set $AUTOSTART                 exec --no-startup-id ~/.config/i3/autostart
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

#font pango:Inconsolata, Anonymous Pro, FontAwesome 14
font pango:Anonymous Pro, Font Awesome 14

